{
    "compilerOptions": {
        "outDir": "./build/",
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "es5",
        "jsx": "react-jsx",
        "allowJs": true,
        "strict": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": { "@/*": ["./src/*"] },
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strictBindCallApply": true,
        "isolatedModules": true
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "include": [
        "./config/jest/setupTests.ts",
        /*         "src", */
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ]
}
